apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: rest-jscreditscoretl02
  labels:
    run: rest-jscreditscoretl02
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        run: rest-jscreditscoretl02
    spec:
      containers:
      - image: $DOCKER_REPO:$WERCKER_GIT_BRANCH-$WERCKER_GIT_COMMIT
        imagePullPolicy: Always
        name: rest-jscreditscoretl02
        ports:
        - containerPort: 3000
          protocol: TCP
      imagePullSecrets:
      - name: wrelease
      restartPolicy: Always
---
apiVersion: v1
kind: Service
metadata:
  name: rest-jscreditscore-svctl02
spec:
  selector:
    run: rest-jscreditscoretl02
  ports:
    - port: 8002
      targetPort: 3000
  type: ClusterIP
